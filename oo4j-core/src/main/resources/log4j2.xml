<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="com.tyutyutyu" level="debug"/>

        <Logger name="org.junit" level="warn"/>
        <Logger name="org.junit.vintage.engine.discovery" level="error"/>
        <Logger name="org.springframework" level="info"/>
        <Logger name="org.springframework.jdbc" level="trace"/>
        <Logger name="org.testcontainers" level="info"/>
        <Logger name="🐳 [oracleinanutshell/oracle-xe-11g:latest]" level="info"/>

        <Root level="debug">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>